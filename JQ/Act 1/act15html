<!DOCTYPE html>
<html>
<head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
$(document).ready(function(){
    $("#div1").click(function(){
        $("#div1").css("width","250px");
        $("#div1").css("height","250px");
    });
    $("#div1").dblclick(function(){
        $("#div1").css("width","800px");
        $("#div1").css("height","70px");
    });
});
</script>
<style type="text/css">
	div{
		background-color: blue;
        width: 800px;
        height: 70px;
 
	}

</style>
</head>
<body>
<div id="div1">
</div>
</body>
